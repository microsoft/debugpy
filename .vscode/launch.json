    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Python file",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "consoleTitle": "ptvsd.server",
            "program": "${file}",
            "logToFile": true,
        },
        {
            "name": "Attach: connect",
            "type": "python",
            "request": "attach",
            "logToFile": true,
            "connect": {
                "port": 5678,
                "host": "127.0.0.1",
            }
        },
        {
            "name": "Attach: listen",
            "type": "python",
            "request": "attach",
            "logToFile": true,
            "listen": {
                "port": 5678,
                "host": "127.0.0.1",
            }
        },
        {
            "name": "Attach: PID",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal",
        }
    ]
}